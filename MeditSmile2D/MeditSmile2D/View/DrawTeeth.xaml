<UserControl x:Class="MeditSmile2D.View.DrawTeeth"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeditSmile2D.View"
             mc:Ignorable="d" 
             
             x:Name="DrawTeethControl"
             d:DesignHeight="860" d:DesignWidth="1280">
    <UserControl.Resources>
        <!--Opacity="{Binding Path=OpacitySlider, ElementName=DrawTeethControl}"-->
        <ImageBrush x:Key="color1" ImageSource="/images/th1.PNG" TileMode="Tile"/>
        <ImageBrush x:Key="color2" ImageSource="/images/th2.PNG" TileMode="Tile"/>
        <ImageBrush x:Key="color3" ImageSource="/images/th3.PNG" TileMode="Tile"/>
    </UserControl.Resources>

    <Canvas>
        <Path x:Name="path" Stroke="{Binding PathColor, ElementName=DrawTeethControl}" StrokeThickness="1"/>
    </Canvas>

</UserControl>
