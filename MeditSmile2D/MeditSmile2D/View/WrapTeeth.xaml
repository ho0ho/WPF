<UserControl x:Class="MeditSmile2D.View.WrapTeeth"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeditSmile2D.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Border x:Name="wrapbor"  BorderThickness="1" BorderBrush="SteelBlue" >
        <Grid x:Name="innerWrap" >
            <Rectangle Cursor="Hand" Visibility="Visible">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Black" Opacity="0"/>
                </Rectangle.Fill>
            </Rectangle>
            <Line x:Name="lineH" Stroke="Red" StrokeThickness="2" Visibility="Visible" StrokeDashCap="Round" StrokeEndLineCap="Round" StrokeStartLineCap="Round"></Line>
            <Label x:Name="lengthX"></Label>
            <Line x:Name="lineV" Stroke="Blue" StrokeThickness="2" Visibility="Visible" StrokeDashCap="Round" StrokeEndLineCap="Round" StrokeStartLineCap="Round"></Line>
            <Label x:Name="lengthY"></Label>
                                                  
        </Grid>
    </Border>
</UserControl>
