<UserControl x:Class="MeditSmile2D.View.ToothTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeditSmile2D.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"             
             >
    <Canvas>
        <Border BorderThickness="1" BorderBrush="SteelBlue">
            <Grid Name="OutterWrap">
                <local:MergeControl Points="{Binding Points[0]}"/>
                <local:MergeControl Points="{Binding Points[1]}"/>
                <local:MergeControl Points="{Binding Points[2]}"/>
                <local:MergeControl Points="{Binding Points[3]}"/>
                <local:MergeControl Points="{Binding Points[4]}"/>
                <local:MergeControl Points="{Binding Points[5]}"/>
            </Grid>
        </Border>
    </Canvas>
</UserControl>
