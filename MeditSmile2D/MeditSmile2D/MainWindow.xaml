<Window x:Class="MeditSmile2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeditSmile2D"
        mc:Ignorable="d"
        
        xmlns:View="clr-namespace:MeditSmile2D.View"
        
        Title="MeditSmile2D" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Title}" VerticalAlignment="Center" FontWeight="Bold" FontSize="18.667"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <RadioButton x:Name="radio1" IsChecked="{Binding IsTemplate1}" Margin="10">Template #1</RadioButton>
            <RadioButton x:Name="radio2" IsChecked="{Binding IsTemplate2}" Margin="10">Template #2</RadioButton>
        </StackPanel>

        <Canvas Grid.Row="2">
            <View:ToothTemplate></View:ToothTemplate>
        </Canvas>

    </Grid>
</Window>
